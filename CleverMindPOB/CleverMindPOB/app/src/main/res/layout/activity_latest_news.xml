<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="15dp"
    tools:context=".LatestNews">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/back"
            android:text="LATEST NEWS"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/share" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/share"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <RelativeLayout
                    android:padding="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/border"
                    android:backgroundTint="#D7DBDD">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google&#xA;Last Updates of&#xA;developments&#xA;What Is Mobilegeddon and The Google Mobile-Friendly&#xA;
Update On April 21, 2015, Google released&#xA;a significant new mobile-friendly ranking algorithm that’s
designed to&#xA; give a boost to mobile-friendly pages in Google’s&#xA; mobile search results."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/google" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <RelativeLayout
                    android:padding="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/border"
                    android:backgroundTint="#D7DBDD">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android&#xA;Developers website&#xA;Learning&#xA;AOSP has been around for more than 10 years and
visibility into the project has often been restricted to the Android Team and Partners. A lot of that has
been rooted in business needs: we want to have fun things to show off at launches and the code wasn't
factored in a way that let us do more in the open."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/android" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <RelativeLayout
                    android:padding="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/border"
                    android:backgroundTint="#D7DBDD">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IOS&#xA;Last Updates&#xA;For our customers' protection, Apple doesn't disclose, discuss, or confirm
security issues until an&#xA;investigation has occurred and patches or releases are available. This document
lists recent releases. For more information about security, see the Apple Product Security page. You can
encrypt communications with Apple using the Apple Product Security PGP Key."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ios" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</ScrollView>
